generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type UsersStatistics {
  gameName String
  profits  Float
}

model Users {
  id            String            @id @default(auto()) @map("_id") @db.ObjectId
  clientId      BigInt
  credits       Int
  dailyCooldown DateTime          @db.Date
  experience    Int
  level         Int
  name          String
  statistics    UsersStatistics[]
}
